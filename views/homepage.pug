doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Pokemon, Catch 'em all 
        #{records}
        .cards 
            each pokemon in records
                .card 
                    h2.card__name #{pokemon.properties.name}  
                    p.card__type #{pokemon.properties.type}